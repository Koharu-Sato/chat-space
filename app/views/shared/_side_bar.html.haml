.side-bar
  .side-bar__header
    .side-bar__header__box
      %h3.side-bar__header__box__name
        = current_user.name
      %ul.side-bar__header__box__lists
        %li.side-bar__header__box__lists__new-group
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.side-bar__header__box__lists__edit
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__name
            = group.name
          %p.group__message
            = group.show_last_message
      