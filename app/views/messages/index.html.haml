        .chat-main__form__new-text__input-box
          %input.chat-main__form__new-text__input-box__text{ placeholder: "type a message", type: "text", name: "message[content]" }
            %label.chat-main__form__new-text__input-box__text__upload-file{for: "message-image"}
              %i.fa.fa-picture-o
                %input{ class: "chat__main__form__new-text__input-box__text__upload-file", type: "file", name: "message[image]", id: "message-image"}
        = link_to "", class: "chat-main__form__new-text__submit-btn" do
          Send

  